@using Bz.F8t.WebApp.ApiClients.Dtos

<div class="card h-100">
    <div class="card-body">
        <h5 class="card-title">@Competition.StartAt.ToString("yyyy-MM-dd") at @Competition.StartAt.ToString("hh:mm") in @Competition.Place.City</h5>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Distance: <strong>@Competition.Distance.Amount @Competition.Distance.Unit</strong></li>
        <li class="list-group-item">Max number of competitors: <strong>@Competition.MaxCompetitors</strong></li>
        <li class="list-group-item">Status: <strong>@Competition.Status</strong></li>
    </ul>
    <div class="card-body">
        @* <button type="button" class="btn btn-primary" disabled="@(competition.Status != statusOpenedForRegistration)">Register</button> *@
        <a href="#" class="btn btn-primary @(Competition.Status !=statusOpenedForRegistration ? "disabled" : "")">Register</a>
        <a href="#" class="btn btn-secondary">Starting list</a>
    </div>
</div>

@code {
    private const string statusOpenedForRegistration = "Opened";

    [EditorRequired]
    [Parameter]
    public CompetitionDto Competition { get; set; }
}
