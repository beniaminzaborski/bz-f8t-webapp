@using Bz.F8t.WebApp.ApiClients.Dtos

<div class="card h-100">
    <div class="card-header">
        @* <h5 class="card-title"> *@
        <strong>@Competition.StartAt.ToString("yyyy-MM-dd")</strong> at <strong>@Competition.StartAt.ToString("hh:mm")</strong> in <strong>@Competition.Place.City</strong>
        @* </h5> *@
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Distance: <strong>@Competition.Distance.Amount @Competition.Distance.Unit</strong></li>
        <li class="list-group-item">Max number of competitors: <strong>@Competition.MaxCompetitors</strong></li>
        <li class="list-group-item">Status: <strong>@Competition.Status</strong></li>
    </ul>
    <div class="card-body">
        @* <button type="button" class="btn btn-primary" disabled="@(competition.Status != statusOpenedForRegistration)">Register</button> *@
        <a href="#" class="btn btn-primary @(Competition.Status !=statusOpenedForRegistration ? "disabled" : "")">
            <i class="bi bi-ui-checks align-middle"></i>
            <span class="align-middle">Register</span>
        </a>
        <a href="#" class="btn btn-secondary">
            <i class="bi bi-people-fill align-middle"></i>
            <span>Starting list</span>
        </a>
    </div>
</div>

@code {
    private const string statusOpenedForRegistration = "OpenedForRegistration";

    [EditorRequired]
    [Parameter]
    public CompetitionDto Competition { get; set; }
}
