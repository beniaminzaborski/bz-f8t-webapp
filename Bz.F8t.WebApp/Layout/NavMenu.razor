<header>
    <!-- Fixed navbar -->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Feet On The Tarmac</a>
            <button class="navbar-toggler @NavMenuButtonCssClass" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation" @onclick="ToggleNavMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="@NavMenuCssClass navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <NavLink class="nav-link" href="administration-panel">
                            <span aria-hidden="true"></span> Admin Panel
                        </NavLink>
                    </li>
                </ul>
                @*  <form class="d-flex">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
                </form> *@
            </div>
        </div>
    </nav>
</header>

@code {
    private bool collapseNavMenuButton = true;
    private bool collapseNavMenu = true;

    private string? NavMenuButtonCssClass => collapseNavMenuButton ? "collapsed" : null;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenuButton = !collapseNavMenuButton;
        collapseNavMenu = !collapseNavMenu;
    }
}
